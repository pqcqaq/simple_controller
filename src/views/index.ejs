<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Collector Data</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    button {
      margin: 10px 0;
    }
  </style>
</head>
<body>

<h1>Collector Data</h1>

<button onclick="clearData()">Clear Data</button>

<table>
  <thead>
    <tr>
      <th>Collector ID</th>
      <th>Timestamp</th>
      <th>Uptime</th>
      <th>Health</th>
      <th>Operation Success</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% collectorDataList.forEach(item => { %>
      <tr>
        <td><%= item.collectorId %></td>
        <td><%= new Date(item.timestamp).toLocaleString() %></td>
        <td><%= item.uptime %></td>
        <td>Voltage: <%= item.health.voltage %>, Signal: <%= item.health.signal_strength %>, Temp: <%= item.health.temperature %></td>
        <td><%= item.last_operation_success ? 'Yes' : 'No' %></td>
        <td><button onclick="viewDetails('<%= item.collectorId %>')">View Details</button></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<script>
  // 查看详情
  function viewDetails(collectorId) {
    alert('View details for Collector ID: ' + collectorId);
  }

  // 清空数据
  async function clearData() {
    await fetch('http://localhost:3000/collector', { method: 'DELETE' });
    window.location.reload(); // 刷新页面
  }
</script>

</body>
</html>
